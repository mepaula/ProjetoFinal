@model IEnumerable<ProjetoFinal.Models.Cidade>

@{
    ViewData["Title"] = "Index";
}

<h1>Registre Aqui</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CidadeNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CidadeNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado.EstadoId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CidadeId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CidadeId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.CidadeId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
