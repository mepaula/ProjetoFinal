@model IEnumerable<ProjetoFinal.Models.TipoProduto>

@{
    ViewData["Title"] = "Index";
}

<h1>Registre Aqui</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoProdutoDescricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoProdutoDescricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TipoProdutoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.TipoProdutoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.TipoProdutoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
